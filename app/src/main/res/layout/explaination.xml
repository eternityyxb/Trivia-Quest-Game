<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:background="@color/Indigo"
    android:orientation="vertical">


    <View
        android:id="@+id/view4"
        android:layout_width="419dp"
        android:layout_height="17dp"
        android:layout_marginTop="426dp"
        android:background="@color/DarkGray"
        app:layout_constraintTop_toBottomOf="@+id/Correcttv"
        tools:layout_editor_absoluteX="-81dp" />

    <View
        android:id="@+id/view8"
        android:layout_width="462dp"
        android:layout_height="17dp"
        android:layout_marginBottom="42dp"
        android:background="@color/DarkGray"
        app:layout_constraintBottom_toBottomOf="@+id/Correcttv"
        tools:layout_editor_absoluteX="-26dp" />

    <View
        android:id="@+id/view5"
        android:layout_width="73dp"
        android:layout_height="518dp"
        android:layout_marginStart="55dp"
        android:background="@color/DarkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Correcttv"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view6"
        android:layout_width="21dp"
        android:layout_height="558dp"
        android:layout_marginEnd="44dp"
        android:background="@color/DarkGray"
        app:layout_constraintEnd_toStartOf="@+id/Correcttv"
        tools:layout_editor_absoluteY="-54dp" />

    <TextView
        android:id="@+id/Correcttv"
        android:layout_width="177dp"
        android:layout_height="31dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="54dp"
        android:text="CORRECT"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/view5"
        app:layout_constraintStart_toEndOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/view8" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="157dp"
        android:layout_height="57dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="56dp"
        android:text="Continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Correcttv" />

    <TextView
        android:id="@+id/Answertv"
        android:layout_width="187dp"
        android:layout_height="44dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:text="Answer"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/view5"
        app:layout_constraintStart_toEndOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/Correcttv" />

    <TextView
        android:id="@+id/Explanationtv"
        android:layout_width="271dp"
        android:layout_height="281dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Explaination"
        android:textColor="#FFF"
        app:layout_constraintEnd_toStartOf="@+id/view5"
        app:layout_constraintStart_toEndOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/Answertv" />

</androidx.constraintlayout.widget.ConstraintLayout>