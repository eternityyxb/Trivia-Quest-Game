<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@color/Peru"
    android:orientation="vertical">


    <View
        android:id="@+id/view4"
        android:layout_width="419dp"
        android:layout_height="17dp"
        android:layout_marginTop="114dp"
        android:background="@color/DarkGray"
        app:layout_constraintTop_toBottomOf="@+id/stage_text"
        tools:layout_editor_absoluteX="-89dp" />

    <View
        android:id="@+id/view8"
        android:layout_width="461dp"
        android:layout_height="11dp"
        android:layout_marginBottom="24dp"
        android:background="@color/DarkGray"
        app:layout_constraintBottom_toTopOf="@+id/stage_text"
        tools:layout_editor_absoluteX="-26dp" />

    <View
        android:id="@+id/view5"
        android:layout_width="75dp"
        android:layout_height="397dp"
        android:layout_marginStart="42dp"
        android:background="@color/DarkGray"
        app:layout_constraintStart_toEndOf="@+id/stage_text"
        tools:layout_editor_absoluteY="-13dp" />

    <View
        android:id="@+id/view6"
        android:layout_width="20dp"
        android:layout_height="446dp"
        android:layout_marginEnd="43dp"
        android:background="@color/DarkGray"
        app:layout_constraintEnd_toStartOf="@+id/stage_text"
        tools:layout_editor_absoluteY="-88dp" />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="109dp"
        android:layout_height="67dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="97dp"
        android:text="Enter"
        app:layout_constraintEnd_toStartOf="@+id/view5"
        app:layout_constraintStart_toEndOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/stage_text" />

    <TextView
        android:id="@+id/stage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="17dp"
        android:text="World 1- Stage 1"
        android:textColor="#FFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/btnexit"
        app:layout_constraintTop_toBottomOf="@+id/view8" />

    <ImageButton
        android:id="@+id/btnexit"
        android:layout_width="36dp"
        android:layout_height="37dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>