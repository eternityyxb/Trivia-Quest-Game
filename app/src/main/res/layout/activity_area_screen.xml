            android:layout_marginBottom="379dp"
            app:layout_constraintBottom_toBottomOf="@+id/World_1_Map"
            app:layout_constraintEnd_toEndOf="@+id/World_1_Map"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toStartOf="@+id/World_1_Map"
            app:layout_constraintTop_toTopOf="@+id/World_1_Map"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/ic_lock_idle_lock" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="556dp"
            android:layout_marginTop="284dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="169dp"
            app:layout_constraintBottom_toBottomOf="@+id/World_1_Map"
            app:layout_constraintEnd_toEndOf="@+id/World_1_Map"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/World_1_Map"
            app:layout_constraintTop_toTopOf="@+id/World_1_Map"
            app:layout_constraintVertical_bias="0.756"
            app:srcCompat="@android:drawable/ic_lock_idle_lock" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</HorizontalScrollView>
