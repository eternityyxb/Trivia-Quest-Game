<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@color/Peru"
    android:orientation="vertical">

    <View
        android:id="@+id/view30"
        android:layout_width="333dp"
        android:layout_height="19dp"
        android:background="@color/DarkGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view31"
        android:layout_width="333dp"
        android:layout_height="19dp"
        android:background="@color/DarkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view32"
        android:layout_width="21dp"
        android:layout_height="194dp"
        android:layout_marginBottom="1dp"
        android:background="@color/DarkGray"
        app:layout_constraintBottom_toTopOf="@+id/view31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view33"
        android:layout_width="21dp"
        android:layout_height="199dp"
        android:layout_marginBottom="1dp"
        android:background="@color/DarkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEquip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="9dp"
        android:text="Equip"
        app:layout_constraintBottom_toTopOf="@+id/view31"
        app:layout_constraintEnd_toStartOf="@+id/view33"
        app:layout_constraintStart_toEndOf="@+id/view32"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="268dp"
        android:layout_height="83dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="Do you want to equip it?"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/view33"
        app:layout_constraintStart_toEndOf="@+id/view32"
        app:layout_constraintTop_toBottomOf="@+id/view30" />

    <ImageButton
        android:id="@+id/btnExit_Equip"
        android:layout_width="36dp"
        android:layout_height="37dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>