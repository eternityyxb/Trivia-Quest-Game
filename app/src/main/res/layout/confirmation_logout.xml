<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@color/Peru">

    <View
        android:id="@+id/view17"
        android:layout_width="345dp"
        android:layout_height="12dp"
        android:background="@color/DarkGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view18"
        android:layout_width="345dp"
        android:layout_height="12dp"
        android:background="@color/DarkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view19"
        android:layout_width="14dp"
        android:layout_height="195dp"
        android:background="@color/DarkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view17" />

    <View
        android:id="@+id/view20"
        android:layout_width="14dp"
        android:layout_height="195dp"
        android:background="@color/DarkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view17" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="265dp"
        android:layout_height="100dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="18dp"
        android:text="Do you want to Logout?"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnYes_logout"
        app:layout_constraintEnd_toStartOf="@+id/view20"
        app:layout_constraintStart_toEndOf="@+id/view19"
        app:layout_constraintTop_toBottomOf="@+id/view17" />

    <Button
        android:id="@+id/btnYes_logout"
        android:layout_width="101dp"
        android:layout_height="56dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="15dp"
        android:text="Yes"
        app:layout_constraintBottom_toTopOf="@+id/view18"
        app:layout_constraintStart_toEndOf="@+id/view19"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <Button
        android:id="@+id/btnNo_logout"
        android:layout_width="101dp"
        android:layout_height="56dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="12dp"
        android:text="No"
        app:layout_constraintBottom_toTopOf="@+id/view18"
        app:layout_constraintEnd_toStartOf="@+id/view20"
        app:layout_constraintStart_toEndOf="@+id/btnYes_logout"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />
</androidx.constraintlayout.widget.ConstraintLayout>