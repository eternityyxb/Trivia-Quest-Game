<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@color/Peru"
    android:orientation="vertical">

    <View
        android:id="@+id/view4"
        android:layout_width="419dp"
        android:layout_height="17dp"
        android:layout_marginTop="100dp"
        android:background="@color/DarkGray"
        app:layout_constraintTop_toBottomOf="@+id/pause_text"
        tools:layout_editor_absoluteX="-89dp" />

    <View
        android:id="@+id/view8"
        android:layout_width="461dp"
        android:layout_height="11dp"
        android:layout_marginBottom="5dp"
        android:background="@color/DarkGray"
        app:layout_constraintBottom_toTopOf="@+id/pause_text"
        tools:layout_editor_absoluteX="-26dp" />

    <View
        android:id="@+id/view5"
        android:layout_width="75dp"
        android:layout_height="397dp"
        android:layout_marginStart="2dp"
        android:background="@color/DarkGray"
        app:layout_constraintStart_toEndOf="@+id/pause_text"
        tools:layout_editor_absoluteY="-13dp" />

    <View
        android:id="@+id/view6"
        android:layout_width="39dp"
        android:layout_height="446dp"
        android:layout_marginEnd="2dp"
        android:background="@color/DarkGray"
        app:layout_constraintEnd_toStartOf="@+id/pause_text"
        tools:layout_editor_absoluteY="-60dp" />

    <TextView
        android:id="@+id/pause_text"
        android:layout_width="302dp"
        android:layout_height="74dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="65dp"
        android:text="Are you sure you want to leave the battle?"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnYes"
        android:layout_width="109dp"
        android:layout_height="67dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="24dp"
        android:text="Yes"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toStartOf="@+id/btnNo"
        app:layout_constraintStart_toEndOf="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/pause_text" />

    <Button
        android:id="@+id/btnNo"
        android:layout_width="109dp"
        android:layout_height="67dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="26dp"
        android:text="No"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toStartOf="@+id/view5"
        app:layout_constraintStart_toEndOf="@+id/btnYes"
        app:layout_constraintTop_toBottomOf="@+id/pause_text" />

</androidx.constraintlayout.widget.ConstraintLayout>